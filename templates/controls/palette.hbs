<div class="form-group">
	<label>{{localize name}}</label>
	<input type="text" name="{{property}}" data-type="{{type}}" value="{{default}}" is="colorpicker-input" data-responsive-color data-watch-picker-change>
	<div class="notes">{{{markdown hint}}}</div>
	<div class="lib-themer-preview shades">
		<span style="background: var({{property}}-100); color: var({{property}}-100-contrast-text);">100</span>
		<span style="background: var({{property}}-200); color: var({{property}}-200-contrast-text);">200</span>
		<span style="background: var({{property}}-300); color: var({{property}}-300-contrast-text);">300</span>
		<span style="background: var({{property}}-400); color: var({{property}}-400-contrast-text);">400</span>
		<span style="background: var({{property}}-500); color: var({{property}}-500-contrast-text);">500</span>
		<span style="background: var({{property}}-600); color: var({{property}}-600-contrast-text);">600</span>
		<span style="background: var({{property}}-700); color: var({{property}}-700-contrast-text);">700</span>
		<span style="background: var({{property}}-800); color: var({{property}}-800-contrast-text);">800</span>
		<span style="background: var({{property}}-900); color: var({{property}}-900-contrast-text);">900</span>
	</div>
</div>